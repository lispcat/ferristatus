{
    "settings": {
        "check_interval": 100,
        "default_separator": "|"
    },

    "components": {

        "Alsa": {
            "refresh_interval": 500,
            "left_pad": " v: ",
            "right_pad": "% ",
            "signal": 5
        },

        "Backlight": {
            "refresh_interval": 500,
            "left_pad": " b: ",
            "right_pad": " ",
            "signal": 6
        },

        "Battery": {
            "refresh_interval": 1000,
            "signal": 7,

            "path": "/sys/class/power_supply/BAT0",

            "subcomponents": [ "percent", "time_left" ],
            "percent": {
                "left_pad": " b: ",
                "right_pad": "% "
            },
            "time_left": {
                "left_pad": "",
                "right_pad": " "
            }
        },

        "Time": {
            "refresh_interval": 500,
            "signal": 8,

            "format": "%a %d %b %I:%M %P"
        }
    }
}
